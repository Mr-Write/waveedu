<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhulang.waveedu.edu.dao.LessonClassMapper">

    <select id="isCreatorByUserIdOfId" resultType="java.lang.Integer">
        SELECT 1
        FROM `edu_lesson_class`
        WHERE `id` = #{id}
          AND `creator_id` = #{userId}
          AND `is_deleted` = 0
    </select>
    <select id="selectBasicInfo" resultType="com.zhulang.waveedu.edu.query.ClassBasicInfoQuery">
        SELECT `creator_id`,`name`,`cover`,`num`,`is_end_class`,`lesson_id`,`create_time`
        FROM `edu_lesson_class`
        WHERE `id` = #{id}
    </select>
</mapper>
